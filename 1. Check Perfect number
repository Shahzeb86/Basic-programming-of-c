// write a program to check a perfect number.
#include <stdio.h>
int main()
{
    int n,i,sum=0;
    printf("Enter the number\n");
    scanf("%d",&n);
    for(i=1;i<n;i++)
    {
    if(n%i==0)
    {
        sum = sum+i;
    }
    }
    if(sum == n)
    {
        printf("This is perfect number");
    }
    else {
        printf("This is not perfect number");
    }
    return 0;
}
